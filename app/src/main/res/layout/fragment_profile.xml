<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

  <LinearLayout
      android:id="@+id/profile_top"
      android:gravity="center"

      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="150dp">


    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/nav_profile_picture" />

      <ImageView
          android:id="@+id/change_profile_photo"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="10dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="8dp"
          android:src="@drawable/cameraa"

          />



  </LinearLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="BELMA YILMAZ"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tenis oynamayı ve çikolatayı seviyor." />

    <TextView
        android:id="@+id/profile_user_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Gezdiğim İller: İstanbul, Bursa, Eskişehir, Antalya" />

    <ImageView
        android:id="@+id/profile_user_instagram"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/profile_user_place"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/insta" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_top"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/profile_name"
        android:src="@color/colorPrimary" />


</RelativeLayout>